<h1>Product List</h1>
<div class="productContainer">
    {{#each products}}
        <div class="productCard">
            <h3 id=`${{{this.id}}}`>{{this.title}}</h3>
            <h4>{{this.description}}</h4>
            <p>Code: {{this.code}}</p>
            <p>Price: ${{this.price}}</p>
            <p>Stock: {{this.stock}}</p>
            <p>Category: {{this.category}}</p>
        </div>
    {{/each}}
</div>

<div class="pageWrapper">
    <div class="pageContainer">
        {{#if hasPrevPage}}
            <a class="aPagePrev" href="?page={{prevPage}}&limit={{limit}}">
                Previous
            </a>
        {{/if}}
        <p class="textPage">Page {{currentPage}} of {{totalPages}}</p>
        {{#if hasNextPage}}
            <a class="aPageNext" href="?page={{nextPage}}&limit={{limit}}">
                Next
            </a>
        {{/if}}
    </div>
</div>